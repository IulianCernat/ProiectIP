<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <servlet>
        <servlet-name>ServletTest</servlet-name>
        <servlet-class>controller.servlets.ServletTest</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GetProblems</servlet-name>
        <servlet-class>controller.servlets.GetProblems</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>GetProblem</servlet-name>
        <servlet-class>controller.servlets.GetProblem</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SendSolution</servlet-name>
        <servlet-class>controller.servlets.SendSolution</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>controller.servlets.Register</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>SendSolution</servlet-name>
        <url-pattern>/SendSolution</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ServletTest</servlet-name>
        <url-pattern>/HelloWorld</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GetProblems</servlet-name>
        <url-pattern>/GetProblems</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>GetProblem</servlet-name>
        <url-pattern>/GetProblem</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
</web-app>
